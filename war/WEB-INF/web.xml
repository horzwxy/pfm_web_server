<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<!-- start of servlets -->
	<servlet>
		<servlet-name>LogIn</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.servlet.LogInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogIn</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SetNickname</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.servlet.SetNicknameServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SetNickname</servlet-name>
		<url-pattern>/setnickname</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AddDiningInfo</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.servlet.AddDiningInfoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddDiningInfo</servlet-name>
		<url-pattern>/adddininginfo</url-pattern>
	</servlet-mapping>
	<!-- end of servlets -->
	
	<!-- start of example servlets -->
	<servlet>
		<servlet-name>DataOut</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.example.DataOutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DataOut</servlet-name>
		<url-pattern>/dataout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DataIn</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.example.DataInServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DataIn</servlet-name>
		<url-pattern>/datain</url-pattern>
	</servlet-mapping>
	<!-- end of example servlets -->
	
	<!-- start of admin servlets -->
	<servlet>
		<servlet-name>AddTestUser</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.servlet.admin.AddTestUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddTestUser</servlet-name>
		<url-pattern>/addtestuser</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ShowAllUser</servlet-name>
		<servlet-class>me.horzwxy.app.pfm.server.servlet.admin.ShowAllUsersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShowAllUser</servlet-name>
		<url-pattern>/alluser</url-pattern>
	</servlet-mapping>
	<!-- end of admin servlets -->
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
